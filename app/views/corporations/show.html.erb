<div class="container">
  <h3><%= t('.info') %></h3>
  <div class="card">
    <div class="card-body">
      <p><strong>企業名: </strong><%= @corporation.name %></p>
      <p><strong>詳細: </strong><%= @corporation.info %></p>
      <% if @corporation.image.present? %>
        <p><%= image_tag @corporation.image.url %></p>
      <% end %>
      <div class="member">
        <strong>メンバー: </strong>
        <% @users.each do |user| %>
          <div class="right">
            <%= image_tag user.user_image.url, class: 'user_image' if user.user_image.present? %>
            <%= link_to "@#{user.user_name}", user_path(user.id) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>
