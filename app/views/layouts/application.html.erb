<!DOCTYPE html>
<html>
  <head>
    <title>PartsDivice</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- devise -->
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <% if @suggest && @suggest.errors.any? %>
        <p class="text-danger bg-danger"><%= @suggest.errors.count %> 件のエラーがあります。</p>
        <% @suggest.errors.full_messages.each do |msg| %>
          <p class="text-danger bg-warning"><%= msg %></p>
        <% end %>
      <% end %>
      
    <%= yield %>
  </body>
</html>
