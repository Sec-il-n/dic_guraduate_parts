<div class="container">
  <h2><%= t('.sign_up') %></h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group">
        <%= f.label :user_name %><br />
        <%# autofocus: ページ読み込み時カーソル表示 %>
        <%= f.text_field :user_name, autofocus: true, class: 'field' %>
      </div>
      <div class="form-group">
        <%= f.label :email %><br />
        <%# autocomplete:ユーザーに対して入力候補を提示して、内容を自動補完する %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'field' %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        (<%= "#{@minimum_password_length} #{t('.characters minimum')}" %>)
        <!-- <em>(<%= @minimum_password_length %> characters minimum)</em> -->
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'field' %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'field' %>
      </div>

      <div class="form-group actions">
        <%= f.submit t('.register'), class: 'btn btn-primary' %>
        <p><%= render "devise/shared/links" %></p>
      </div>
    <% end %>
</div>
